@page "/"
@layout SharedMVVM.Components.EmptyLayout_View
@rendermode InteractiveServer
@using BlazorApp.MVVM.ViewModel
@inject LoginViewModel Vm

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Iniciar Sesión</h3>

                    <EditForm Model="Vm.LoginDTO" OnValidSubmit="Vm.LoginCommand.Execute" FormName="login-form">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="username" class="form-label">Usuario</label>
                            <InputText id="username" @bind-Value="Vm.LoginDTO.Username" class="form-control" />
                            <ValidationMessage For="@(() => Vm.LoginDTO.Username)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <InputText id="password" type="password" @bind-Value="Vm.LoginDTO.Password" class="form-control" />
                            <ValidationMessage For="@(() => Vm.LoginDTO.Password)" class="text-danger small" />
                        </div>

                        @if (!string.IsNullOrEmpty(Vm.ErrorMessage))
                        {
                            <div class="alert alert-danger py-2" role="alert">
                                @Vm.ErrorMessage
                            </div>
                        }

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                        </div>
                    </EditForm>
                </div>
            </div>

        </div>
    </div>
</div>